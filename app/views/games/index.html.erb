<h1>Games</h1>

<% @games.each do |game| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><strong><%= game.name %></strong></h3>
    </div>
    <div class="panel-body">
      <strong>Price: </strong>
      <%= number_to_currency(game.price) %>
      <br><br>
      <strong>Description: </strong>
      <%= game.description %>
      
      <% if game.images.count > 0 %>
        <br><br>
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% (game.images.count).times do |i| %>
            <li data-target="#carousel-example-generic" data-slide-to="<% i %>" class="active"></li>
          <% end %>
        </ol>
        <div class="carousel-inner" role="listbox">
          <% counter=1 %>
          <% (0...game.images.count).each do |image| %>
            <% if counter == 1%>
              <div class="item active">
                <%= image_tag(game.images[image]) %>
                <div class="carousel-caption">
                </div>
              </div>
            <% else %>
              <div class="item">
                <%= image_tag(game.images[image]) %>
                <div class="carousel-caption">
                </div>
              </div>
            <% end %>
            <% counter = counter + 1 %>
          <% end %>
        </div>
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    <% end %>


    <br><br>
      <% if user_signed_in? %>
        <div class="btn-group">
          <div style="display:flex">
            <div>
              <%= link_to "Show Game", game, class: "btn btn-primary" %>
            </div>
            <% if game.developer_id != current_user.id %>
              <div style="margin-left:5px">
                <%= button_to "Add to cart", cart_items_path(:game_id => game.id), remote: true, class: "btn btn-success" %>  
              </div>
            <% end %>
            <% if game.developer_id == current_user.id %>
              <div style="margin-left:5px">
                <%= link_to "Edit Game", edit_game_path(game), class: "btn btn-info" %>
              </div>
              <div style="margin-left:5px">
                <%= link_to "Delete Game", game, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <%= button_to "Add to cart", cart_items_path(:game_id => game.id), remote: true, class: "btn btn-success" %> 
      <% end %>
    </div>
  </div>
<% end %>

