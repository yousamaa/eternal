  </div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div style='text-align:left; margin-top: 30px'>
<h3>Basic Information</h3>
  <div class="field form-group">
    <% f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Name", style: "margin-top: 20px;" %>
  </div>
  
  <div class="field form-group">
    <% f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", style: "margin-top: 20px;" %>
  </div>
</div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<div style='text-align:left; margin-top: 30px'>
<h3>Change Password</h3>
  <div class="field form-group">
    <% f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password", style: "margin-top: 20px;" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field form-group">
    <% f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password", style: "margin-top: 20px;" %>
  </div>

  <div style='text-align:left; margin-top: 30px'>
<h3>Confirm Changes</h3>
  <div class="field form-group">
    <% f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Current Password", style: "margin-top: 20px;" %>
  </div>
  </div>
  </div>
  <br><br>
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-secondary", style: "min-width: 20%; padding-top: 10px; padding-bottom: 10px;   background-image: linear-gradient(to right, #8800cc , #cc66ff); border: none; border-radius: 50px" %>
  </div>
<% end %>
  </div>
</div>

