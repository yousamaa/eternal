  <a href="#dashboard"><i class="fa-solid fa-gauge-max" style='margin-right: 10px'></i>  Dashboard</a>
  <a class="active" href="#profile"><i class="fa-solid fa-gauge-max" style='margin-right: 10px'></i> Profile</a>
  <a href="#games"><i class="fa-solid fa-gauge-max" style='margin-right: 10px'></i> Games</a>
  <a href="#about"><i class="fa-solid fa-gauge-max" style='margin-right: 10px'></i> About</a>
</div>

<div class="content" style='background-color: #070A26'>
<% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>




