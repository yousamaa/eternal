<style>
body {
  margin: 0;
  font-family: "Lato", sans-serif;
  color: white;
  background-color: #070A26;
}

.sidebar {
  margin: 0;
  padding: 0;
  width: 250px;
  background-color: #220066;
  position: fixed;
  height: 100%;
  overflow: auto;
}

.sidebar a {
  display: block;
  color: white;
  padding: 16px;
  text-decoration: none;
}
 
.sidebar a.active {
  background-color: white;
    box-shadow: 0px 0px 15px white;
  color: black;
}

.sidebar a:hover:not(.active) {
  background-color: #8800cc;
  color: white;
}

div.content {
  margin-left: 200px;
  padding: 1px 16px;
  height: 1000px;
}

@media screen and (max-width: 700px) {
  .sidebar {
    width: 100%;
    height: auto;
    position: relative;
  }
  .sidebar a {float: left;}
  div.content {margin-left: 0;}
}

@media screen and (max-width: 400px) {
  .sidebar a {
    text-align: center;
    float: none;
  }
}
</style>
</head>
